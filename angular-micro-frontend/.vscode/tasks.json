{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "npm install",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Shell Application",
      "type": "shell",
      "command": "npm run serve:shell",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": ".*Compiled successfully.*"
          }
        }
      }
    },
    {
      "label": "Start MFE1 Application",
      "type": "shell",
      "command": "npm run serve:mfe1",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": ".*Compiled successfully.*"
          }
        }
      }
    },
    {
      "label": "Build Shell Application",
      "type": "shell",
      "command": "npm run build:shell",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build MFE1 Application",
      "type": "shell",
      "command": "npm run build:mfe1",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Both Applications",
      "dependsOrder": "parallel",
      "dependsOn": ["Start Shell Application", "Start MFE1 Application"],
      "group": "build",
      "isBackground": true
    }
  ]
}
